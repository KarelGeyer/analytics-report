{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
        "key-spacing": [
            "error",
            {
                "afterColon": true
            }
        ],
        "array-bracket-newline": [
            "error",
            {
                "multiline": true,
                "minItems": 4
            }
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "caughtErrors": "none",
                "ignoreRestSiblings": true,
                "args": "none"
            }
        ],
        "react/prop-types": 0
    }
}